<h1>Listing animals</h1>

<table>
  <tr>
    <th>Type</th>
    <th>Value</th>
    <th>Info</th>
    <th>Predator</th>
    <th>Prey</th>
    <th>Size</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @animals.each do |animal| %>
  <tr>
    <td><%= animal.type %></td>
    <td><%= animal.value %></td>
    <td><%= animal.info %></td>
    <td><%= animal.predator_id %></td>
    <td><%= animal.prey_id %></td>
    <td><%= animal.size %></td>
    <td><%= link_to 'Show', animal %></td>
    <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
    <td><%= link_to 'Destroy', animal, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

