<h2>Listing animals</h2>

<table>
  <tr>
    <th>Species</th>
    <th>Value</th>
    <th>Info</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @animals.each do |animal| %>
  <tr>
    <td><%= animal.species %></td>
    <td><%= animal.value %></td>
    <td><%= animal.info %></td>
    <td><%= animal.price %></td>
    <td><%= link_to 'Show', animal %></td>
    <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
    <td><%= link_to 'Destroy', animal, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

